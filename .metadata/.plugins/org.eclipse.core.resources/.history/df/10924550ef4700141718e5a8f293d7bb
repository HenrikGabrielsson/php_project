<?php

namespace model;

class User
{
	
    private $id = 0;            //unikt id
    private $userName;      //anvÃ¤ndarnamn
    private $email;         //email-address
    private $password;      //lÃ¶senord(hashat)
    private $salt;          //lÃ¶senord-salt
    private $dateAdded;     //datum som kontot skapades
    private $admin;         //false = vanlig anvÃ¤ndare, true = admin
    
    public function __construct($id, $userName, $email, $password, $salt, $dateAdded, $admin)
	{
		$this->id = $id;
		$this->userName = $userName;
		$this->email = $email;
		$this->password = $password;
		$this->salt = $salt;
		$this->dateAdded = $dateAdded;
		$this->admin = $admin;
		
	}
}